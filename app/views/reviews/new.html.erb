<header id="content-header">
	<h1>Write review for 	<%= @movie.title %> </h1>
</header>

<%= form_for([@movie, @review]) do |f| %>
<%= render 'shared/errors', object: @review %>

<fieldset>
	<ol>
		<li class="required">
			<%= f.label :name %>
			<%= f.text_field :name, size: 40, autofocus: true %>
		</li>
		<li class="required stars">
		  <%= f.label :stars %>
		  <% Review::STARS.each do |star| %>
		    <span class="star">
		      <%= f.radio_button :stars, star %> <%= star %>
		    </span>
		  <% end %>
		</li>
		<li class="required">
			<%= f.label :comment %>
			<%= f.text_field :comment %>
		</li>
	</ol>
	<p>
		<%= f.submit 'Post Review' %>
		<%= link_to 'Cancel', movies_path, class: "button" %>
	</p>
</fieldset>

<% end %>